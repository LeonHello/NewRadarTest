<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <GridLayout
        android:id="@+id/GL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/text_ip"
                android:textColor="@color/background_floating_material_dark" />

            <TextView
                android:id="@+id/text_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/text_port"
                android:textColor="@color/background_floating_material_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_ip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:hint="@string/text_ip_hint"
                android:text="@string/edit_ip" />

            <EditText
                android:id="@+id/edit_port"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:hint="@string/text_port_hint"
                android:text="@string/edit_port" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent_material_light"
                android:text="@string/btn_connect"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent_material_light"
                android:text="@string/btn_disconnect"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_getScanFrequency"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@color/accent_material_light"
            android:text="@string/btn_getScanFrequency"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_startStreaming"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@color/accent_material_light"
            android:text="@string/btn_startStreaming"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        <Button
            android:id="@+id/btn_stopStreaming"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:background="@color/accent_material_light"
            android:text="@string/btn_stopStreaming"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试立定跳远双路距离(单位mm)"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中间距离:   "
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左路距离:   "
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右路距离:   "
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>